<StyledTextArea @bind-Value=text StyleRules=styleRules rows="1"></StyledTextArea>

@code {
    private string text = StyledTextArea.PrepareText(
        @"Mix of line specific and global styles, all should be applied.
*  any global word line match
*  specific word line match and global match
*  any global word line match");

    private List<StyleRule> styleRules = new List<StyleRule>()
    {
        StyleRule.Text("*  ", "").ReplaceWith("●  ").AtStartOfLine(),
        StyleRule.Words("global", "underline italic"),
        StyleRule.Words("word", "underline italic"),
        StyleRule.Words("specific word", "bold").OnLine(2)
    };
}

