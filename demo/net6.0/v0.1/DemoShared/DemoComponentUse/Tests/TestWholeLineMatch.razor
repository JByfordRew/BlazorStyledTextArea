<StyledTextArea @bind-Value=text StyleRules=styleRules></StyledTextArea>

@code {
    private string text = StyledTextArea.PrepareText(
        @"Whole line match can fail.  Try deleting and splitting and rejoining lines.
A sample line
The sample whole line to match
another line");

    private List<StyleRule> styleRules = new List<StyleRule>()
    {
        StyleRule.Words("The sample whole line to match", "bold")
    };
}

